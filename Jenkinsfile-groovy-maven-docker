def gv
pipeline {
    agent any
    tools {
        maven 'maven'
    }
    parameters {
        string(name: 'DOCKER_USER_NAME', default: 'test', description: 'Enter dockerhub user name')
    }
    stages {
        stage('init') {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
        stage('Build Jar') {
            steps {
                echo 'Building Jar file'
                script {
                    gv.buildJar()
                }
            }
        }
        stage('Docker login') {
            steps {
                echo 'Logging in Docker...'
                script {
                    gv.dockerLogin()
                }
            }
        }
        stage('Docker build image') {
            steps {
                echo 'Building image'
                script {
                    gv.dockerBuild()
                }
            }
        }
        stage('Docker Push') {
            steps {
                echo 'Pushing image to DockerHub'
                script {
                    gv.dockerPush
                }
            }
        }
    }
}
